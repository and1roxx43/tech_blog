<section class="edit-container">
    <section class="editform-page">
        <section class="form-heading">
            <h2>Edit Post</h2>
        </section>
        <section class="form-section">
            <form class="edit-form">
                <section class="title-section">
                    <label for="title">Title</label>
                    <input type="text" name="title" id="title" value="{{post.title}}">
                </section>
                <section class="post-content">
                    <label for="post-content">Content</label>
                    <textarea name="post-content" id="post-content">{{post.content}}</textarea>
                </section>
                <button type="submit" class="edit-post-btn">Update post</button>
                <button type="button" class="delete-post-btn">Delete post</button>
            </form>
        </section>
    </section>
</section>

{{#if loggedIn}}
<script src="/script/edit.js"></script>
<script src="/script/delete.js"></script>
{{/if}}